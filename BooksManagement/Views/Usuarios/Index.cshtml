@using BooksManagement.Models
@model List<Usuario>

@{
    ViewData["Title"] = "Usuarios";
}

<h1>Lista Usuarios</h1>
<h5>Modulo con el listado de Usuarios.</h5>

@Html.ActionLink("Crear","Crear","Usuarios", null,new {@class="btn btn-primary"})

<table class="table  table-hover table-table-bordered">
    <thead>
        <tr>
            <td>@Html.LabelFor(p=>Model[0].IdCliente)</td>
            <td>@Html.LabelFor(p=>Model[0].Nombres)</td>
            <td>@Html.LabelFor(p=>Model[0].Apellidos)</td>
            <td>@Html.LabelFor(p=>Model[0].NumIdentificacion)</td>
            <td>@Html.LabelFor(p=>Model[0].Email)</td>
            <td>@Html.LabelFor(p=>Model[0].Direccion)</td>
            <td>@Html.LabelFor(p=>Model[0].TelefonoFijo)</td>
            <td>@Html.LabelFor(p=>Model[0].Chabilitado)</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.IdCliente</td>
                <td>@item.Nombres</td>
                <td>@item.Apellidos</td>
                <td>@item.NumIdentificacion</td>
                <td>@item.Email</td>
                <td>@item.Direccion</td>
                <td>@item.TelefonoFijo</td>
                <td>@item.Chabilitado</td>
                <td></td>
            </tr>
        }
    </tbody>
</table>
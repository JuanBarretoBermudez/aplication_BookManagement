@using BooksManagement.Models;
@model Libro

@{
    ViewData["Title"] = "Crear Libro";
}

<h1>Crear Libro</h1>
<h5>Modulo para la creacion de libros.</h5>

<div asp-validation-summary="ModelOnly" class="text-danger"></div>


<div class="row">
    <div class="col-md-6">
        @using (Html.BeginForm("Agregar", "Libros", FormMethod.Post, new { @id="frmAgregar"}))
        {
            <div class="mb-3">
                <label asp-for="Id" class="form-label"></label>
                <input asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="UserId" class="form-label"></label>
                <input asp-for="UserId" class="form-control" />
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Title" class="form-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Body" class="form-label"></label>
                <input asp-for="Body" class="form-control" />
                <span asp-validation-for="Body" class="text-danger"></span>
            </div>

            <div style="margin:auto">
                <button type="submit" class="btn btn-primary">Enviar</button>
            </div>
            
        }
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}
